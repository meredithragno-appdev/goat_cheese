<!-- Validation failure messages -->
<% if @producer.errors.any? %>
  <% @producer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Producer #<%= @producer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_producer/<%= @producer.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for regions_id -->
      <div class="form-group">
        <label for="regions_id" class="control-label">
          Regions
        </label>

        <%= select_tag(:regions_id, options_from_collection_for_select(Region.all, :id, :created_at, @producer.regions_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @producer.name %>">
      </div>

      <button class="btn btn-warning">
        Update Producer
      </button>
      or
      <a href="/producers/<%= @producer.id %>">Cancel</a>
    </form>
  </div>
</div>
