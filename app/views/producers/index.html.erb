<div class="page-header">
  <h1>
    Producers
    <a href="/producers/new" class="btn btn-lg btn-success">New Producer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Regions</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @producers.each do |producer| %>
      <tr>
        <td>
          <% if producer.regions.present? %>
            <a href="/regions/<%= producer.regions.id %>">
              <%= producer.regions.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= producer.name %></td>
        <td>
          <a href="/producers/<%= producer.id %>" class="btn btn-primary">Show</a>
          <a href="/producers/<%= producer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_producer/<%= producer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @producers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
