<div class="page-header">
  <h3>Tasting #<%= @tasting.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cheeses</dt>
      <dd><%= @tasting.cheeses_id %></dd>

      <dt>User</dt>
      <dd><%= @tasting.user_id %></dd>

      <dt>Location</dt>
      <dd><%= @tasting.location %></dd>

      <dt>Notes</dt>
      <dd><%= @tasting.notes %></dd>

      <dt>Producers</dt>
      <dd><%= @tasting.producers_id %></dd>

      <dt>Rating</dt>
      <dd><%= @tasting.rating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tastings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @tasting.user %>
        <a href="/tastings/<%= @tasting.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_tasting/<%= @tasting.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
